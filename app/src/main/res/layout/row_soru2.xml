<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:elevation="8dp"
    android:id="@+id/cardView"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:id="@+id/mainlayout">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#F2F0F0"
            app:cardCornerRadius="14dp">

            <TextView
                android:id="@+id/Soru2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soru"
                android:textAlignment="center"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:id="@+id/AsikkiLayout">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="A)"
                android:id="@+id/AsikkiText"/>

            <TextView
                android:id="@+id/Asikki"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="A şıkkı" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:id="@+id/BsikkiLayout">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="B)"
                android:id="@+id/BsikkiText"
                />

            <TextView
                android:id="@+id/Bsikki"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="B şıkkı" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:id="@+id/CsikkiLayout"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="C)"
                android:id="@+id/CsikkiText"/>

            <TextView
                android:id="@+id/Csikki"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="C şıkkı" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:id="@+id/DsikkiLayout">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="D)"
                android:id="@+id/DsikkiText"/>

            <TextView
                android:id="@+id/Dsikki"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="D şıkkı" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:id="@+id/EsikkiLayout">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="E)"
                android:id="@+id/EsikkiText"/>

            <TextView
                android:id="@+id/Esikki"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="E şıkkı" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageSelected"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_check2"
            android:layout_gravity="right"

            />


    </LinearLayout>


</androidx.cardview.widget.CardView>